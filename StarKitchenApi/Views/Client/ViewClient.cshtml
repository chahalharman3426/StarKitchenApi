@model IEnumerable<StarKitchenApi.Models.ClientCredential>

@{
    ViewBag.Title = "ViewClient";
}

<h2>View Client</h2>

<p>
    @Html.ActionLink("Add New CLient", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service)
        </th>
        <th>Modify</th>
        <th>Remove</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Service)
        </td>
        <td>
            <p class="btn btn-danger"> @Html.ActionLink("Edit", "Edit", new { id = item.id }) |</p></td>
        <td>
            <p class="btn btn-danger">
                @Html.ActionLink("Delete", "Delete", new { id = item.id })</p>
        </td>
    </tr>
}

</table>


